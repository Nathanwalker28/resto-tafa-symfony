{% extends 'base.html.twig' %}

{% block title %}Hello DishController!
{% endblock %}

{% block body %}

	<div class="container">

		<div class="container py-3">
			<div class="h1">Vos plats préférées</div>
			<!-- Card Start -->
			<div class="row">
				<div class="col-md-8">
					{% for dish in dishes %}
						<div class="card my-5 p-3">
							<div class="row">
								<div class="col-md-8">
									<div class="card-block px-6">
										<h2 class="card-title"> {{ dish.name}} </h2>
                                        <p class="card-text"><strong>Ingredients : </strong> {{ dish.ingredients }}</p>
										<p class="card-text"><strong>Description : </strong> {{ dish.description }}</p>
										<h6 class="card-text">
                                            <strong>Prix :</strong>
											{{ dish.price }}
											<small>
												MGA
											</small>
										</h6>

										<a href="#" class="mt-auto btn btn-primary  ">Commander</a>
									</div>
								</div>

								<div class="col-md-4">
									<img src="{{ asset( dish.coverImage) }}" alt="" class="img-fluid">
								</div>

							</div>
						</div>
					{% endfor %}

				</div>

			</div>


			<!-- End of card -->

		</div>


	</div>


{% endblock %}
