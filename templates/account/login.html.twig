{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<div class="container">
		<section class="vh-70">
			<div class="container py-5 h-70">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col col-xl-10">
						<div class="card" style="border-radius: 1rem;">
							<div class="row g-0">
								<div class="col-md-6 col-lg-5 d-none d-md-block">
									<img src="/images/pexels-moises-ribeiro-11462873.jpg" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"/>
								</div>
								<div class="col-md-6 col-lg-7 d-flex align-items-center">
									<div class="card-body p-4 p-lg-5 text-black">
										<form method="post">

											<div class="d-flex align-items-center mb-3 pb-1">
												<img src="/images/logo.png" alt="" width="200">
											</div>

											<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Veuillez vous connecter !</h5>

											<div class="form-outline mb-4">
												<input type="email" value="{{ last_username }}" name="email" id="form2Example17" class="form-control form-control-lg" required autofocus>
												<label for="inputEmail" class="form-label" for="form2Example17">Adresse email</label>
											</div>

											<div class="form-outline mb-4">
												<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
												<input type="password" name="password" id="form2Example27" class="form-control form-control-lg" autocomplete="current-password" required>
												<label for="inputPassword" class="form-label" for="form2Example27">Mot de passe</label>
											</div>
                                                    {#  
											            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
														See https://symfony.com/doc/current/security/remember_me.html
															
														<div class="checkbox mb-3">
															<label>
															    <input type="checkbox" name="_remember_me"> Remember me
															</label>
														</div>
													#}

											<div class="pt-1 mb-4">
												<button class="btn btn-dark btn-lg btn-block" type="submit">Se connecter</button>
											</div>

											<p class="mb-5 pb-lg-2" style="color: #e06378;">Vous n'avez pas de compte?
												<a href="{{ path('app_account_register') }}" style="color: #e06378;">Cr√©er un compte</a>
											</p>
										</form>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
